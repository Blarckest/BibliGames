<UserControl x:Class="Vues.User_Controls.VignetteJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vues.User_Controls"
             xmlns:SymbolStore="clr-namespace:System.Diagnostics.SymbolStore;assembly=System.Diagnostics.StackTrace"
             mc:Ignorable="d"
             MouseEnter="MontrerCroix" MouseLeave="CacherCroix" Background="Transparent"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image Height="35" Width="35" Source="/Icones/loupe.png"/>
        <TextBlock  Grid.Column="1" Text="{Binding Nom}" HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>
        <Image x:Name="CroixSupp" Source="{Binding Image}" Visibility="Hidden" Grid.Column="2" MouseLeftButtonDown="DemandeSuppression" Width="20" Margin="5,0,5,0"/>
    </Grid>
</UserControl>
