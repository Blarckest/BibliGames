<UserControl x:Class="Vues.User_Controls.Details"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vues.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Button DockPanel.Dock="Top" Content="Jouer" Click="LancerJeu" HorizontalAlignment="Right" Margin="20"/>
        <Button DockPanel.Dock="Bottom" Content="Modifier" Click="ModifierJeu" HorizontalAlignment="Right" Margin="20"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Image Source="/Icones/loupe.png" Margin="50,0,50,0" />
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="textBlockDescription" TextWrapping="Wrap" Text="description" Margin="50,0,50,0"/>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</UserControl>
