<Application x:Class="Vues.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Vues"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundColorDarkTheme">#24282F</SolidColorBrush>
        <SolidColorBrush x:Key="TextColorDarkTheme">#C5CBD8</SolidColorBrush>
        <Style TargetType="Panel" x:Key="BlackTheme">
            <Setter Property="Background" Value="{StaticResource BackgroundColorDarkTheme}"/>
        </Style>
    </Application.Resources>
</Application>
